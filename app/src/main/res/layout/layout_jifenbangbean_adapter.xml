<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_gravity="center_vertical"
        android:id="@+id/fragmentjifen2_cardview"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardCornerRadius="10dp"
        card_view:cardPreventCornerOverlap="true"
        card_view:cardUseCompatPadding="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:textSize="15dp"
            android:id="@+id/jifenbang_textview1"
            android:text="排名"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp" />

       <TextView
           android:textSize="15dp"
           android:id="@+id/jifenbang_textview2"
           android:text="球队名"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginStart="20dp"
           android:layout_alignParentTop="true"
           android:layout_toEndOf="@+id/jifenbang_textview1" />

       <TextView
           android:textSize="15dp"
           android:id="@+id/jifenbang_textview3"
           android:text="场次"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentTop="true"
           android:layout_toEndOf="@+id/jifenbang_textview2"
           android:layout_marginStart="20dp" />

        <TextView
            android:textSize="15dp"
            android:id="@+id/jifenbang_textview4"
            android:text="胜平负"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/jifenbang_textview5"
            android:layout_marginEnd="30dp" />

       <TextView
           android:textSize="15dp"
           android:id="@+id/jifenbang_textview5"
           android:text="净胜球"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginEnd="20dp"
           android:layout_alignParentTop="true"
           android:layout_toStartOf="@+id/jifenbang_textview6" />

        <TextView
            android:layout_marginEnd="20dp"
            android:textSize="15dp"
            android:id="@+id/jifenbang_textview6"
            android:text="积分"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />
</RelativeLayout>
        </android.support.v7.widget.CardView>

</LinearLayout>
